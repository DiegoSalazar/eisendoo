<div id="login" class="container main">
  <%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" } do |f| %>
    <h2 class="form-signin-heading">Please sign in</h2>

      <%= f.label :email, nil, class: "sr-only" %>
      <%= f.email_field :email, placeholder: "Email address", autofocus: true, class: "form-control" %>

      <%= f.label :password, nil, class: "sr-only" %>
      <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control" %>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <label for="user_remember_me">
          <%= f.check_box :remember_me %>
          Remember me
        </label>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
    </div>

    <%= render "devise/shared/links" %>
  <% end %>
</div>
