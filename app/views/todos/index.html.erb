<h1>Listing todos</h1>

<table>
  <thead>
    <tr>
      <th>Quadrant</th>
      <th>User</th>
      <th>Body</th>
      <th>Due</th>
      <th>Notify</th>
      <th>Recurring rule</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.quadrant %></td>
        <td><%= todo.user %></td>
        <td><%= todo.body %></td>
        <td><%= todo.due %></td>
        <td><%= todo.notify %></td>
        <td><%= todo.recurring_rule %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
